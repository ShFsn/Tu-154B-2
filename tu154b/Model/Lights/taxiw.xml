<?xml version="1.0"?>

<PropertyList>

  <path>white.ac</path>

  <effect>
  <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
	    <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>white</object-name>
  </effect>

  <animation>
    <type>noshadow</type>
    <object-name>white</object-name>
  </animation>

  <animation>
    <type>alpha-test</type>
    <alpha-factor>0.01</alpha-factor>
  </animation>

  <!--<animation>
    <type>billboard</type>
    <object-name>white</object-name>
    <spherical type="bool">true</spherical>
  </animation>-->

  <animation>
    <type>select</type>
    <object-name>white</object-name>
    <condition>
      <and>
      <!--<property>/tu154/light/retract</property>-->
      <greater-than>
        <property>/tu154/light/headlight-selector</property>
        <value>0.75</value>
      </greater-than>
      <less-than>
        <property>/tu154/light/headlight-selector</property>
        <value>0.85</value>
      </less-than>
      <equals>
        <property>/gear/gear/position-norm</property>
        <value>1</value>
      </equals>
      <greater-than>
        <property>/tu154/systems/electrical/buses/DC27-bus-Lv/volts</property>
        <value>0</value>
      </greater-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>dist-scale</type>
    <object-name>white</object-name>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>2</dep>
      </entry>
      <entry>
        <ind>1000</ind>
        <dep>3</dep>
      </entry>
    </interpolation>
  </animation>

  <animation>
    <type>flash</type>
    <object-name>white</object-name>
    <offset>0.0</offset>
    <factor>1.0</factor>
    <power>2</power>
    <two-sides type="bool">false</two-sides>
    <min>0.0</min>
    <max>1.0</max>
    <center>
      <x-m>0.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
      </center>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>
 
</PropertyList>
