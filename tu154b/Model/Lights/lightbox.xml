<PropertyList>
 <path>lightbox.ac</path>

<!--Point lights-->

<animation>
   <type>light</type>
   <light-type>point</light-type>
   <object-name>lightbox</object-name>
   <nopreview/>
   <position>
     <x>0.0</x>
     <y>0.0</y>
     <z>0.0</z>
   </position>
   <ambient>
     <r>0.03</r>
     <g>0.03</g>
     <b>0.03</b>
     <a>1.0</a>
   </ambient>
   <diffuse>
     <r>0.7</r>
     <g>0.7</g>
     <b>0.6</b>
     <a>1.0</a>
   </diffuse>
   <specular>
     <r>0.7</r>
     <g>0.7</g>
     <b>0.7</b>
     <a>1.0</a>
   </specular>
   <dim-factor>
      <offset>0.4</offset>
   </dim-factor>   
   <attenuation>
     <c>1.0</c>
     <l>0.002</l>
     <q>0.00005</q>
   </attenuation>
   <near-m>0.01</near-m>
   <far-m>2.0</far-m>
 </animation>
 
