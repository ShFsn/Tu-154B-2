<PropertyList>
 <path>lightcone-tiny.ac</path>

<!--Spot lights-->

<animation>
   <type>light</type>
   <light-type>spot</light-type>
   <object-name>lightcone-taxi</object-name>
   <nopreview/>
   <position>
     <x>0.0</x>
     <y>0.0</y>
     <z>0.0</z>
   </position>
   <direction>
     <x>0.0</x>
     <y>0.0</y>
     <z>-1.0</z>
   </direction>
   <ambient>
     <r>0.03</r>
     <g>0.03</g>
     <b>0.03</b>
     <a>1.0</a>
   </ambient>
   <diffuse>
     <r>0.7</r>
     <g>0.7</g>
     <b>0.6</b>
     <a>1.0</a>
   </diffuse>
   <specular>
     <r>0.7</r>
     <g>0.7</g>
     <b>0.7</b>
     <a>1.0</a>
   </specular>
   <attenuation>
     <c>1.0</c>
     <l>0.002</l>
     <q>0.00005</q>
   </attenuation>
   <exponent>30.0</exponent>
   <cutoff>80</cutoff>
   <near-m>1</near-m>
   <far-m>100</far-m>
 </animation>
