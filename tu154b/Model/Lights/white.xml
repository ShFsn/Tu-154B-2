<?xml version="1.0"?>

<PropertyList>

  <path>white.ac</path>

  <effect>
  <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
	<property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>white</object-name>
  </effect>

  <animation>
    <type>noshadow</type>
    <object-name>white</object-name>
  </animation>

  <animation>
    <type>alpha-test</type>
    <alpha-factor>0.01</alpha-factor>
  </animation>

  <animation>
    <type>billboard</type>
    <object-name>white</object-name>
    <spherical type="bool">true</spherical>
  </animation>

  <animation>
    <type>select</type>
    <object-name>white</object-name>
    <condition>
      <or>
      <property>tu154/light/nav/blue</property>
      <property>sim/multiplay/generic/int[0]</property>
      </or>
    </condition>
  </animation>

  <animation>
    <type>dist-scale</type>
    <object-name>white</object-name>
    <interpolation>
      <entry>
        <ind>0</ind>
        <dep>1</dep>
      </entry>
      <entry>
        <ind>1000</ind>
        <dep>2</dep>
      </entry>
    </interpolation>
  </animation>
 
</PropertyList>
