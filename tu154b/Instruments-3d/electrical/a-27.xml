<!-- 27 V direct current indicator
3D instrument for Tu-154 -->
<PropertyList>
 <path>27_a.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>needle</object-name>
  <emission>
    <red-prop>sim/model/cabin-lighting/prib</red-prop>
    <green-prop>sim/model/cabin-lighting/prib</green-prop>
    <blue-prop>sim/model/cabin-lighting/prib-2</blue-prop>
  </emission>
</animation>

  
<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>tu154/instrumentation/electrical/a27</property>
    <interpolation>
      <entry><ind>	-40.0</ind>	<dep>	-121.0</dep></entry>
      <entry><ind>	0.0</ind>	<dep>	-99.0</dep></entry>
      <entry><ind>	400.0</ind>	<dep>	120.0</dep></entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>



</PropertyList>
