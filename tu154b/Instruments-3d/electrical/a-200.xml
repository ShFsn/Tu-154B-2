<!-- Check lamps on captain panel button
3D instrument for Tu-154 -->
<PropertyList>
 <path>200_a.ac</path>
 <!-- Internal instruments lighting -->
 <animation>
   <type>material</type>
   <object-name>base</object-name>
   <object-name>needle</object-name>
  <emission>
    <red-prop>sim/model/cabin-lighting/prib</red-prop>
    <green-prop>sim/model/cabin-lighting/prib</green-prop>
    <blue-prop>sim/model/cabin-lighting/prib-2</blue-prop>
  </emission>
 </animation>
 <!--External panel lighting-->
 <animation>
   <type>material</type>
   <object-name>cover</object-name>
  <emission>
    <red-prop>sim/model/cabin-lighting/vnesh</red-prop>
    <green-prop>sim/model/cabin-lighting/vnesh</green-prop>
    <blue-prop>sim/model/cabin-lighting/vnesh</blue-prop>
  </emission>
 </animation>

  
<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>tu154/instrumentation/electrical/a200</property>
    <interpolation>
      <entry><ind>	0.0</ind>	<dep>	-119.0</dep></entry>
      <entry><ind>	40.0</ind>	<dep>	-104.0</dep></entry>
      <entry><ind>	50.0</ind>	<dep>	-89.0</dep></entry>
      <entry><ind>	100.0</ind>	<dep>	-13.0</dep></entry>
      <entry><ind>	150.0</ind>	<dep>	123.0</dep></entry>
    </interpolation>
    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>



</PropertyList>
