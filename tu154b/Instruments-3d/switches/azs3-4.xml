<!-- AZS type 3 with red cover
3D instrument for Tu-154 -->
<PropertyList>
 <path>azs_4.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>handle</object-name>
  <object-name>cover_up</object-name>
  <emission>
    <red-prop>sim/model/cabin-lighting/vnesh</red-prop>
    <green-prop>sim/model/cabin-lighting/vnesh</green-prop>
    <blue-prop>sim/model/cabin-lighting/vnesh</blue-prop>
  </emission>
</animation>

  
<animation>
  <type>rotate</type>
  <object-name>handle</object-name>
  <property>tu154/switches/APU-cutoff-valve</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>

<animation>
  <type>rotate</type>
  <object-name>cover</object-name>
  <property>tu154/switches/APU-cutoff-valve-cover</property>  
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	10.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	160.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.00378</x-m>
    <y-m>0.0</y-m>
    <z-m>0.01429</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>


<!--Control-->
<animation>
  <type>pick</type>
  <object-name>hotspot_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/APU-cutoff-valve", 1.0, 0.1 );
        interpolate("tu154/switches/APU-cutoff-valve-delay", 1.0, 3.0 );
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hotspot_2</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/APU-cutoff-valve", 0.0, 0.1 );
        interpolate("tu154/switches/APU-cutoff-valve-delay", 0.0, 0.5 );
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>cover_up</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        if( getprop("tu154/switches/APU-cutoff-valve-cover") == 0.0 ){
        interpolate("tu154/switches/APU-cutoff-valve-cover", 1.0, 0.1 );}
        else {interpolate("tu154/switches/APU-cutoff-valve-cover", 0.0, 0.1 );}
      </script>
    </binding>
  </action>
</animation>



</PropertyList>
