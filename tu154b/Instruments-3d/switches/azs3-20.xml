<?xml version="1.0"?>
<PropertyList>
  <path>azs_4.ac</path>
  <!--External panel lighting-->
  <animation>
    <type>material</type>
    <object-name>base</object-name>
    <object-name>handle</object-name>
    <object-name>cover_up</object-name>
  <emission>
    <red-prop>sim/model/cabin-lighting/vnesh</red-prop>
    <green-prop>sim/model/cabin-lighting/vnesh</green-prop>
    <blue-prop>sim/model/cabin-lighting/vnesh</blue-prop>
  </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>handle</object-name>
    <property>tu154/gear/sw-emerg2</property>
    <factor>130</factor>
    <offset-deg>-75</offset-deg>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>cover</object-name>
    <property>tu154/gear/sw-emerg2-cover</property>
    <factor>110</factor>
    <center>
      <x-m>0.00378</x-m>
      <y-m>0.0</y-m>
      <z-m>0.01429</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>hotspot_1</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>
          interpolate("tu154/gear/sw-emerg2", 1, 0.1);
          setprop("controls/gear/gear-down", 1);
        </script>
      </binding>
    </action>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>hotspot_2</object-name>
    <visible>false</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-interpolate</command>
        <property>tu154/gear/sw-emerg2</property>
        <value>0</value>
        <time>0.1</time>
      </binding>
    </action>
  </animation>
  <animation>
    <type>pick</type>
    <object-name>cover_up</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>
            if (!getprop("tu154/gear/sw-emerg2-cover"))
                interpolate("tu154/gear/sw-emerg2-cover", 1, 0.1);
            else if (!getprop("tu154/gear/sw-emerg2"))
                interpolate("tu154/gear/sw-emerg2-cover", 0, 0.1);
        </script>
      </binding>
    </action>
  </animation>
</PropertyList>
