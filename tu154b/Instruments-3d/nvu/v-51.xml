<!-- V-51 NVU (navigation system) control
3D instrument for Tu-154 -->
<PropertyList>
 <path>v-51.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>selector_1</object-name>
  <object-name>selector_2</object-name>
  <object-name>power</object-name>
  <object-name>count</object-name>
  <object-name>corr</object-name>
  <emission>
    <red-prop>sim/model/cabin-lighting/vnesh</red-prop>
    <green-prop>sim/model/cabin-lighting/vnesh</green-prop>
    <blue-prop>sim/model/cabin-lighting/vnesh</blue-prop>
  </emission>
</animation>

<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>base_b</object-name>
  <object-name>text</object-name>
  <object-name>_handle_marker</object-name>
  <emission>
    <red-prop>sim/model/cabin-lighting/lamps</red-prop>
    <green-prop>sim/model/cabin-lighting/lamps</green-prop>
    <blue-prop>sim/model/cabin-lighting/lamps</blue-prop>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>lamp_1_on</object-name>
  <object-name>lamp_2_on</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/nvu/powered</factor-prop>
  </emission>
</animation>


<!--selectors-->
<animation>
  <type>knob</type>
  <object-name>selector_1</object-name>
  <property>tu154/switches/v-51-selector-1</property>
  <visible>true</visible>
  <action>
    <binding>
      <command>property-adjust</command>
      <property>tu154/switches/v-51-selector-1</property>
      <min>-4</min>
      <max>4</max>
      <wrap>false</wrap>
    </binding>
  </action>
  <interpolation>
    <entry><ind>	-4</ind>	<dep>	-130.0</dep></entry>
    <entry><ind>	-3</ind>	<dep>	-95.0</dep></entry>
    <entry><ind>	-2</ind>	<dep>	-62.0</dep></entry>
    <entry><ind>	-1</ind>	<dep>	-31.0</dep></entry>
    <entry><ind>	 0</ind>	<dep>	0.0</dep></entry>
    <entry><ind>	 1</ind>	<dep>	31.0</dep></entry>
    <entry><ind>	 2</ind>	<dep>	62.0</dep></entry>
    <entry><ind>	 3</ind>	<dep>	98.0</dep></entry>
    <entry><ind>	 4</ind>	<dep>	130.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>-0.03017</y-m>
    <z-m>0.00849</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>knob</type>
  <object-name>selector_2</object-name>
  <property>tu154/switches/v-51-selector-2</property>
  <visible>true</visible>
  <action>
    <binding>
      <command>property-adjust</command>
      <property>tu154/switches/v-51-selector-2</property>
      <min>-1</min>
      <max>5</max>
      <wrap>false</wrap>
    </binding>
    <binding>
      <command>nasal</command>
      <script>
        var v = getprop("tu154/switches/v-51-selector-2");
        v = (v > 0 ? v * 5000 + 2000 : 0);
        setprop("fdm/jsbsim/instrumentation/nvu/LUR-2km", v);
      </script>
    </binding>
  </action>
  <interpolation>
    <entry><ind>	-1</ind>	<dep>	-90.0</dep></entry>
    <entry><ind>	 5</ind>	<dep>	90.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.02607</y-m>
    <z-m>0.0133</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
<!--Switches-->
<animation>
  <type>rotate</type>
  <object-name>power</object-name>
  <property>tu154/switches/v-51-power</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.0202</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>count</object-name>
  <property>tu154/switches/v-51-count</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.0202</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>corr</object-name>
  <property>tu154/switches/v-51-corr</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	60.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>-0.0202</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
</animation>
<!--Lamps-->
<animation>
  <type>select</type>
  <object-name>lamp_1_on</object-name>
  <condition>
    <property>fdm/jsbsim/instrumentation/nvu/active</property>
    <property>fdm/jsbsim/instrumentation/nvu/mode-out</property>
  </condition>
</animation>
<animation>
  <type>select</type>
  <object-name>lamp_2_on</object-name>
  <condition>
    <property>fdm/jsbsim/instrumentation/nvu/active</property>
    <property>fdm/jsbsim/instrumentation/nvu/mode-out</property>
    <property>tu154/switches/v-51-corr</property>
  </condition>
</animation>

<!--Controls-->
<animation>
  <type>pick</type>
  <object-name>hs_1</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/v-51-power", 1.0, 0.1 );
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs_2</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/v-51-power", 0.0, 0.1 );
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs_3</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/v-51-count", 1.0, 0.1 );
        setprop("fdm/jsbsim/instrumentation/nvu/stopped", 0);
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs_4</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/v-51-count", 0.0, 0.1 );
        setprop("fdm/jsbsim/instrumentation/nvu/stopped", 1);
      </script>
    </binding>
    <binding>
      <command>nasal</command>
      <script></script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs_5</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/v-51-corr", 1.0, 0.1 );
      </script>
    </binding>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs_6</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/v-51-corr", 0.0, 0.1 );
      </script>
    </binding>
  </action>
</animation>

<!--Buttons-->
<animation>
  <type>pick</type>
  <object-name>hs_7</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>600</interval-sec>
    <binding>
      <command>nasal</command>
      <script>instruments.nvu_distance_adjust(-1)</script>
    </binding>
    <mod-up>
      <binding>
        <command>nasal</command>
        <script>instruments.nvu_distance_adjust(0)</script>
      </binding>
    </mod-up>
  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs_8</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-cycle</command>
      <property>tu154/instrumentation/v-51/adjust-speed</property>
      <value>1000</value>
      <value>10000</value>
    </binding>
  </action>
  <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>nvu-adjust-speed</tooltip-id>
      <label>Adjust speed: %s</label>
      <property>tu154/instrumentation/v-51/adjust-speed</property>
      <mapping>nasal</mapping>
      <script> return (arg[0] == 1000 ? "slow" : "fast")</script>
    </binding>
  </hovered>
</animation>
<animation>
  <type>pick</type>
  <object-name>hs_9</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>600</interval-sec>
    <binding>
      <command>nasal</command>
      <script>instruments.nvu_distance_adjust(1)</script>
    </binding>
    <mod-up>
      <binding>
        <command>nasal</command>
        <script>instruments.nvu_distance_adjust(0)</script>
      </binding>
    </mod-up>
  </action>
</animation>

<!--Scale selector-->
<animation>
  <type>pick</type>
  <object-name>hs_10</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>property-cycle</command>
      <property>tu154/instrumentation/v-51/scale</property>
      <value>1</value>
      <value>10</value>
    </binding>
  </action>
  <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>nvu-scale</tooltip-id>
      <label>Distance scale: %s</label>
      <property>tu154/instrumentation/v-51/scale</property>
      <mapping>nasal</mapping>
      <script>
        return (arg[0] == 1 ? "1 km" : "100 m");
      </script>
    </binding>
  </hovered>
</animation>

</PropertyList>
