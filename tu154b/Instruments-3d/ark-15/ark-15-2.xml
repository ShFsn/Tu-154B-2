<!-- ARK-15 (ADF) control gauge
3D instrument for Tu-154 -->
<PropertyList>
 <path>ark-15.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <emission>
    <red-prop>sim/model/cabin-lighting/vnesh</red-prop>
    <green-prop>sim/model/cabin-lighting/vnesh</green-prop>
    <blue-prop>sim/model/cabin-lighting/vnesh</blue-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>base_switch</object-name>
  <emission>
    <red-prop>sim/model/cabin-lighting/vnesh</red-prop>
    <green-prop>sim/model/cabin-lighting/vnesh</green-prop>
    <blue-prop>sim/model/cabin-lighting/vnesh</blue-prop>
    <factor>0.5</factor>
  </emission>
</animation>

<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>digits</object-name>
  <emission>
    <red-prop>sim/model/cabin-lighting/lamps</red-prop>
    <green-prop>sim/model/cabin-lighting/vnesh</green-prop>
    <blue-prop>sim/model/cabin-lighting/vnesh</blue-prop>
  </emission>
</animation>



<!--Failure lamps-->

<!--Have voltage?-->
<animation>
  <type>material</type>
  <object-name>lamp_1</object-name>
  <object-name>lamp_2</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/instrumentation/ark-15[1]/powered</factor-prop>
  </emission>
</animation>


<animation>
  <type>select</type>
  <object-name>lamp_1</object-name>
  <condition>
    <not><property>tu154/switches/adf-2-selector</property></not>
    <property>instrumentation/adf[1]/serviceable</property>
 </condition>
</animation>
<animation>
  <type>select</type>
  <object-name>lamp_2</object-name>
  <condition>
    <property>tu154/switches/adf-2-selector</property>
    <property>instrumentation/adf[1]/serviceable</property>
  </condition>
</animation>
  

<!--operate/standby selector-->
<animation>
  <type>rotate</type>
  <object-name>handle</object-name>
  <property>tu154/switches/adf-2-selector</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	60.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	-60.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>0.0</y>
    <z>-1.0</z>
  </axis>
</animation>

