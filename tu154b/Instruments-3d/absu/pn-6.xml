<!-- PN-6 ABSU (autothrottle) control
3D instrument for Tu-154 -->
<PropertyList>
 <path>pn-6.ac</path>
<!--External panel lighting-->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>selector</object-name>
  <object-name>cover_1</object-name>
  <object-name>cover_2</object-name>
  <object-name>box_1</object-name>
  <object-name>box_2</object-name>
  <object-name>otkl</object-name>
  <object-name>podg</object-name>
  <object-name>lev_prav</object-name>
  <object-name>at</object-name>
  <object-name>at_wheel</object-name>
  <emission>
    <red-prop>sim/model/cabin-lighting/vnesh</red-prop>
    <green-prop>sim/model/cabin-lighting/vnesh</green-prop>
    <blue-prop>sim/model/cabin-lighting/vnesh</blue-prop>
  </emission>
</animation>

<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>text</object-name>
  <object-name>_handle_marker</object-name>
