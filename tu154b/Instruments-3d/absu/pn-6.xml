<!--************************ Controls *******************************-->
<!--AT knobs-->
<animation>
  <type>pick</type>
  <object-name>at</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("tu154/switches/pn-6-button", 1.0, 0.1 );
      </script>
    </binding>
    <binding>
      <command>nasal</command>
      <script>
        absu.absu_at_check(1);
      </script>
    </binding>
    <mod-up>
      <binding>
        <command>nasal</command>
        <script>
          interpolate("tu154/switches/pn-6-button", 0.0, 0.1 );
        </script>
      </binding>
      <binding>
        <command>nasal</command>
        <script>
          absu.absu_at_check(0);
        </script>
      </binding>
    </mod-up>
  </action>
</animation>

