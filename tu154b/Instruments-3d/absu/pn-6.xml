    <green-prop>sim/model/cabin-lighting/lamps</green-prop>
    <blue-prop>sim/model/cabin-lighting/lamps</blue-prop>
  </emission>
</animation>

<animation>
  <type>material</type>
  <object-name>lamp_1</object-name>
  <object-name>lamp_2</object-name>
  <object-name>lamp_3</object-name>
  <object-name>lamp_4</object-name>
  <object-name>lamp_5</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/instrumentation/pn-6/serviceable</factor-prop>
  </emission>
</animation>
<!--AT selector-->
<animation>
  <type>rotate</type>
  <object-name>selector</object-name>
  <property>tu154/switches/pn-6-selector</property>
  <interpolation>
    <entry><ind>	0.0</ind>	<dep>	-70.0</dep></entry>
    <entry><ind>	1.0</ind>	<dep>	-40.0</dep></entry>
    <entry><ind>	2.0</ind>	<dep>	-10.0</dep></entry>
    <entry><ind>	3.0</ind>	<dep>	10.0</dep></entry>
    <entry><ind>	4.0</ind>	<dep>	40.0</dep></entry>
  </interpolation>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.02679</y-m>
    <z-m>0.07615</z-m>
  </center>
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>
<!--AT wheels-->
<animation>
  <type>rotate</type>
  <object-name>at_wheel</object-name>
  <property>tu154/switches/pn-6-wheel</property>
  <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.00815</z-m>
  </center>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
