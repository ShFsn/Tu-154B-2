<!-- Elevator & stabilizer position gauge
3D instrument for Tu-154 -->
<PropertyList>
 <path>ip-33.ac</path>
<!-- Internal instruments lighting -->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <object-name>elev_needle</object-name>
  <object-name>stab_needle</object-name>
  <emission>
    <red-prop>sim/model/cabin-lighting/prib</red-prop>
    <green-prop>sim/model/cabin-lighting/prib</green-prop>
    <blue-prop>sim/model/cabin-lighting/prib-2</blue-prop>
  </emission>
</animation>

  
<!--Needles-->
<animation>
    <type>rotate</type>
    <object-name>stab_needle</object-name>
    <property>fdm/jsbsim/fcs/stabilizer-pos-rad</property>
    <interpolation>
      <entry><ind>	0.02618</ind>	<dep>	0.0</dep></entry>
      <entry><ind>	0.1222</ind>	<dep>	-82.5</dep></entry>
    </interpolation>

    <axis>
      <x>-1.0</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
</animation>
<animation>
  <type>rotate</type>
  <object-name>elev_needle</object-name>
  <property>fdm/jsbsim/fcs/elevator-pos-rad</property>
    <interpolation>
      <entry><ind>	-0.523</ind>	<dep>	-60.0</dep></entry>
      <entry><ind>	0.0</ind>	<dep>	0.0</dep></entry>
      <entry><ind>	0.34</ind>	<dep>	39.0</dep></entry>
    </interpolation>
    
  <axis>
    <x>-1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
</animation>

<!--Help invoke-->
<animation>
  <type>pick</type>
  <object-name>hs</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>help.advise();</script>
    </binding>
  </action>
</animation>


</PropertyList>
