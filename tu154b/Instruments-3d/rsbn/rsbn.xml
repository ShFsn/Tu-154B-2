  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>handle_1</object-name>
  <visible>true</visible>
  <action>
    <button>3</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>      
      <script>instruments.rsbn_set_f_1(-1)</script>
