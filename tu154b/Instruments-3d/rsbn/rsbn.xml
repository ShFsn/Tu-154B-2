  </action>
</animation>
<animation>
  <type>pick</type>
  <object-name>handle_2</object-name>
  <visible>true</visible>
  <action>
    <button>4</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>      
      <script>instruments.rsbn_set_f_2(1)</script>
