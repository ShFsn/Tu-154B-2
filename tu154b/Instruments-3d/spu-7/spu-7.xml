<!-- Source selector -->

 <animation>
   <type>knob</type>
   <object-name>source_select</object-name>
   <property>/tu154/instrumentation/spu-7/source</property>
   <factor>32</factor>
   <axis>
    <x>-1</x>
    <y>0</y>
    <z>0</z>
   </axis>
   <center>
    <x-m>0.0</x-m>
    <y-m>0.0</y-m>
    <z-m>0.0027</z-m>
   </center>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>/tu154/instrumentation/spu-7/source</property>
      <factor>1</factor>
      <min>0</min>
      <max>5</max>                
      <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>spu-source_rc</tooltip-id>
      <label>Source: %s</label>
      <property>/tu154/instrumentation/spu-7/source</property>
      <mapping>nasal</mapping>
      <script>
        var spusourcerc = ['VHF 1', 'VHF 2', 'HF', 'RSBN', 'Kurs-MP 1', 'Kurs-MP 2'];
        return spusourcerc[arg[0]];
      </script>
    </binding>
   </hovered>
 </animation>

<!-- "General" (left) volume knob (volume of SELECTED by "SPU - Radio" switch)-->

 <animation>
   <type>knob</type>
   <object-name>vol_general</object-name>
   <property>/tu154/instrumentation/spu-7/volume</property>
   <factor>-300</factor>
  <center>
   <x-m>0.0</x-m>
   <y-m>-0.0327</y-m>
   <z-m>0.0436</z-m>
  </center>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>/tu154/instrumentation/spu-7/volume</property>
      <factor>0.05</factor>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
       <binding>
         <command>set-tooltip</command>
         <label>General Volume %3d%%</label>
         <measure-text>General Volume 100p</measure-text>
         <tooltip-id>spu-gen-vol_rc</tooltip-id>
         <mapping>percent</mapping>
         <property>/tu154/instrumentation/spu-7/volume</property>
       </binding>
     </hovered>
 </animation>


