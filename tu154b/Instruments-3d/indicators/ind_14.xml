<effect>
 <inherits-from>Effects/model-transparent</inherits-from>
  <object-name>base</object-name>
</effect>

<!--Covers lighting-->
<animation>
  <type>material</type>
  <object-name>base</object-name>
  <emission>
    <red-prop>sim/model/cabin-lighting/vnesh</red-prop>
    <green-prop>sim/model/cabin-lighting/vnesh</green-prop>
    <blue-prop>sim/model/cabin-lighting/vnesh</blue-prop>
  </emission>
</animation>

<!--Indicators-->
<animation>
  <type>material</type>
  <object-name>gl_1</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/gear-green-1</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>gl_2</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/gear-green-2</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>gl_3</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/gear-green-3</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>rl_1</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/gear-red-1</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>rl_2</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/gear-red-2</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>rl_3</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/indicators/gear-red-3</factor-prop>
  </emission>
</animation>
<animation>
  <type>material</type>
  <object-name>go_gear</object-name>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/warning/gear/state</factor-prop>
  </emission>
</animation>

<!--Check lamps procedure-->
<animation>
  <type>material</type>
  <object-name>gl_1</object-name>
  <object-name>gl_2</object-name>
  <object-name>gl_3</object-name>
  <object-name>rl_1</object-name>
  <object-name>rl_2</object-name>
  <object-name>rl_3</object-name>
  <object-name>go_gear</object-name>
  <condition>
    <property>tu154/systems/electrical/checking-lamps/main-panel</property>
  </condition>
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>
    <factor-prop>tu154/systems/electrical/checking-lamps/main-panel</factor-prop>
  </emission>
</animation>



